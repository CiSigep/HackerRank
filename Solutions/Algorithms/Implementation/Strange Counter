using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Numerics;
class Solution {

    static void Main(String[] args) {
        BigInteger t = BigInteger.Parse(Console.ReadLine());
        
        BigInteger val = new BigInteger(3);
        
        while(t > val){
            t = t - val;
            val = val * 2;
        }
        
        Console.WriteLine(val - t + 1);
            
    }
}
